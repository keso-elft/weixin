<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">
	
	<!-- manager  -->
	
	<bean id="sessionManager" class="com.weixin.server.session.SessionManager" scope="singleton"/>
	
	<bean id="weixinHttpSender" class="com.weixin.send.http.WeixinHttpSender" scope="singleton">
		<property name="userChannelRelationManager" ref="userChannelRelationManager"/>
		<property name="weiXinFansManager" ref="weiXinFansManager"/>
		<property name="channelManager" ref="channelManager"/>
	</bean>
	
	<bean id="weixinWorker" class="com.barrage.worker.WeixinWorker" scope="singleton">
		<property name="channelManager" ref="channelManager"/>
		<property name="weixinHttpSender" ref="weixinHttpSender"/>
		<property name="webPageSender" ref="webPageSender"/>
		<property name="sendMsgSaver" ref="sendMsgSaver"/>
	</bean>
	
	<bean id="sendMsgSaver" class="com.barrage.worker.SendMsgSaver" scope="singleton">
		<property name="storeMessageDao" ref="storeMessageDao"/>
		<property name="weiXinFansManager" ref="weiXinFansManager"/>
	</bean>
	
	<bean id="webPageSender" class="com.barrage.worker.WebPageSender" scope="singleton">
	</bean>
	
	<!-- db manager  -->
	
	<bean id="weiXinFansManager" class="com.weixin.common.WeiXinFansManager" scope="singleton">
		<property name="userDao" ref="userDao"/>
		<property name="sessionRefreshPeriod" value="3600000"/>
	</bean>
	
	<bean id="channelManager" class="com.barrage.service.ChannelManager" scope="singleton">
		<property name="channelDao" ref="channelDao"/>
		<property name="refreshPeriod" value="3600000"/>
	</bean>
	
	<bean id="userChannelRelationManager" class="com.barrage.service.UserChannelRelationManager" scope="singleton">
		<property name="userChannelRelationDao" ref="userChannelRelationDao"/>
		<property name="refreshPeriod" value="3600000"/>
	</bean>
	
</beans>